<Window x:Class="UpdateHalconLicense.GitManagerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UpdateHalconLicense"
        mc:Ignorable="d"
        Title="Git" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"  Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="btnAdd" Grid.Column="1" Content="Add" 
                   Width="80" Padding="5" Click="btnAdd_Click"/>
            <Button x:Name="btnDelete" Grid.Column="2" Content="Delete" Width="80" Padding="5" Click="btnDelete_Click"/>
            <Button x:Name="btnSave" Grid.Column="2" Content="Save" Width="80" Padding="5" Click="btnSave_Click"/>
        </StackPanel>

        <DataGrid SelectionMode="Single" Grid.Row="1" x:Name="dataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" CanUserDeleteRows="True"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="数据" Binding="{Binding Proxy}" 
                                   Width="*" FontSize="14"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
